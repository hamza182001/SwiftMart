<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20sp"
    app:cardElevation="10sp"
    android:orientation="vertical"
    android:backgroundTint="#f1f1f1"
    app:cardCornerRadius="10sp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="170sp"
            android:layout_height="200sp"
            android:scaleType="fitXY"
            android:id="@+id/ivCategoryPic"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvCategoryItemName"
            android:text="Banana"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvCategoryItemDescription"
            android:text="Description"
            android:textSize="15sp"

            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="200Rs"
                android:layout_marginLeft="5sp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:id="@+id/tvCategoryPrice"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_gravity="bottom"
                android:src="@drawable/delete_icon"
                android:id="@+id/ibCategoryDelete"
                android:background="#f1f1f1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="0"
                android:textColor="@color/black"

                android:layout_marginLeft="10sp"

                android:id="@+id/tvCategoryItemCount"
                />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10sp"
                android:src="@drawable/add_circle"
                android:id="@+id/ibCategoryAdd"
                android:background="#f1f1f1"
                />
        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>